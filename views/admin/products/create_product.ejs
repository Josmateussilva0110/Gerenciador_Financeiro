<%- include('../../partials/header', { title: 'Cadastro de Produto' }) %>

<div class="background-container" style="background-image: url('../img/fundo_04.jpg');">
    <div class="page-title">
        <h3>Cadastrar Produto</h3>
    </div>
    <div class="form-container">   
        <form action="#" method="POST">
            <div class="form-group">
                <label for="name">Item*</label>
                <input type="text" name="name" id="name" placeholder="Nome do item" required>
            </div>

            <div class="form-group">
                <label for="price">Preço Estimado*</label>
                <div class="input-number">
                    <input type="number" name="price" id="price" placeholder="0,00" step="0.01" required>
                </div>
            </div>

            <fieldset class="form-group" id="priority-group">
                <legend>Prioridade*</legend>
                <div class="checkbox-group">
                    <input type="checkbox" name="priority" id="priority-high" value="Alta">
                    <label for="priority-high" class="btn-priority high">Alta</label>
            
                    <input type="checkbox" name="priority" id="priority-medium" value="Medio">
                    <label for="priority-medium" class="btn-priority medium">Média</label>
            
                    <input type="checkbox" name="priority" id="priority-low" value="Baixo">
                    <label for="priority-low" class="btn-priority low">Baixa</label>
                </div>
            </fieldset>

            <fieldset class="form-group" id="finalizado-group">
                <legend>Finalizado*</legend>
                <div class="checkbox-group">
                    <input type="checkbox" name="finalizado" id="finalizado-sim" value="Sim" required>
                    <label for="finalizado-sim" class="btn-finalizado yes">Sim</label>
    
                    <input type="checkbox" name="finalizado" id="finalizado-nao" value="Nao" required>
                    <label for="finalizado-nao" class="btn-finalizado no">Não</label>
                </div>
            </fieldset>

            <div class="form-group">
                <label for="date">Data*</label>
                <input type="date" name="date" id="date" required>
            </div>

            <div class="form-actions">
                <button class="btn-submit" type="submit">Cadastrar</button>
                <button type="button" class="btn-cancel">Cancelar</button>
            </div>
        </form>
    </div>
</div>

<%- include('../../partials/footer') %>
